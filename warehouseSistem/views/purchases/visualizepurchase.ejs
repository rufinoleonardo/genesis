<%- include('../partials/header.ejs');%>
<%- include('../partials/navbar.ejs');%>
<div class="container col-11 col-md-10 p-4 justify-content-center rounded">
    <div class="card row">
        <div class="card-header">
            <div class="row">
                <div class="col-9">
                    <h2>[<%= purchase.status %>] COMPRA <%= purchase.id %>: <%= purchase.title %></h2>
                </div>
                
            </div>
        </div>
        <div class="card-body align-items-center">
            <div class="row gx-5">
                <div class="col-6">
                    <h4>PRODUTOS DA COMPRA</h4>
                    <div class="table-container">
                        <table class="table table-striped table-hover table-responsive align-middle text-center">
                            <thead>
                                <tr>
                                    <th class="text-start">Produto</th>
                                    <th>Qtd</th>
                                    <th>Pre√ßo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% formatedPurchaseP.forEach( purchaseProduct => { %>
                                    <tr>
                                        <td class="text-start text-wrap"><%= purchaseProduct.title %></td>
                                        <td><%= purchaseProduct.amount %></td>
                                        <td><%= purchaseProduct.price %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row mt-5">
                        <div class="card text-center" style="width: 45%;">
                            <div class="card-body">
                              <h5 class="card-title">N</h5>
                              <h6 class="card-subtitle mb-2 text-muted">Produtos</h6>
                            </div>
                        </div>
                        <div class="card text-center" style="width: 45%;">
                            <div class="card-body">
                              <h5 class="card-title">N,00</h5>
                              <h6 class="card-subtitle mb-2 text-muted">Reais</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-2 offset-10">
            <a href="/purchases" class="btn btn-outline-secondary form-control">Voltar</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs');%>